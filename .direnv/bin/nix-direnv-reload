#!/usr/bin/env bash
set -e
if [[ ! -d "/home/blockdoth/Documents/repos/tree_but_beter" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/home/blockdoth/Documents/repos/tree_but_beter")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/home/blockdoth/Documents/repos/tree_but_beter" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/home/blockdoth/Documents/repos/tree_but_beter/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/home/blockdoth/Documents/repos/tree_but_beter/.envrc" "/home/blockdoth/Documents/repos/tree_but_beter/.direnv"/*.rc
